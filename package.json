{
  "name": "cpapp",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^6",
    "@sap/xssec": "^3.2.14",
    "express": "^4",
    "passport": "^0.6.0",
    "hdb": "^0.19.0"
  },
  "devDependencies": {
    "@sap/eslint-plugin-ui5-jsdocs": "^2.0.5",
    "@sap/ux-specification": "^1.102.14",
    "@sapui5/ts-types": "^1.92.2",
    "eslint": "^7.32.0",
    "sqlite3": "^5.0.4"
  },
  "scripts": {
    "start": "cds run",
    "deploy_sqlite": "cds deploy --to sqlite",
    "compile_xsuaa": "cds compile srv/ --to xsuaa > xs-security.json",
    "watch-risks": "cds watch --open risks/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-mitigations": "cds watch --open mitigations/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "engines": {
    "node": "^16.15"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "[production]": {
          "kind": "hana-cloud"
        }
      },
      "auth": {
        "kind": "mocked",
        "users": {
          "RiskManager@demo.com": {
            "password": "init",
            "roles": [
              "RiskManager"
            ]
          },
          "RiskViewer@demo.com": {
            "password": "init",
            "roles": [
              "RiskViewer"
            ]
          }
        },
        "[production]": {
          "kind": "xsuaa"
        }
      }
    }
  },
  "sapux": [
    "app/risks",
    "app/mitigations"
  ]
}